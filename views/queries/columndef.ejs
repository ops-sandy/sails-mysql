SELECT 
	ordinal_position,
	column_name,
	data_type,
	column_default,
	is_nullable,
	character_maximum_length, 
	numeric_precision,
    column_key,
    extra
	FROM information_schema.columns
WHERE TABLE_SCHEMA = DATABASE()
<% if (_.isEmpty(table)==false) { %>      
	   AND table_name= '<%= table%>'
<% } %>
ORDER BY ordinal_position;