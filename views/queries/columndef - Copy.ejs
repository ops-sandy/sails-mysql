SELECT table_name, 
       column_name, 
       data_type, 
       udt_name, 
       is_nullable 
FROM   information_schema."columns" 
WHERE  table_schema NOT IN ( 'pg_catalog', 'information_schema' ) 
<% if (_.isEmpty(table)==false) { %>
       AND table_name = '<%= table%>' 
<% } %>
ORDER  BY table_name, 
          ordinal_position 